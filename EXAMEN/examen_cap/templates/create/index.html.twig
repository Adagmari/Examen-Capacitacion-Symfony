{% extends 'base.html.twig' %}

{% block title %}Agregar{% endblock %}

{% block body %}
<div class="mt-1 row justify-content-center">
    <div class="col-auto">
        <div class="align-center">
            <div class="mb-3">
                <h2>{{tituloPagina}}</h2>
            </div>
            <div class="border border-secondary bg-light">
                <div class="m-4">
                    {{form_start(form)}}
                    <div class= "form-group">
                        <h4>Título:</h4>
                        {{form_widget(form.titulo)}}

                    </div>
                    <div class= "form-group">
                        <h4>Descripción:</h4>
                        {{form_widget(form.descripcion)}}

                    </div>
                    <div class= "form-group">
                        <h4>Año de publicación:</h4>
                        {{form_widget(form.anio)}}

                    </div>
                    <div class= "form-group">
                        <h4>Autor:</h4>
                        {{form_widget(form.autor)}}

                    </div>
                    <div class="justify-content-center mt-4 text-center">
                        <input type="submit" class="btn btn-primary">
                    </div>
                    
                    
                    {{form_end(form)}}
                </div>
                

            </div>
            
        </div>
    </div>
</div>
    
{% endblock %}
