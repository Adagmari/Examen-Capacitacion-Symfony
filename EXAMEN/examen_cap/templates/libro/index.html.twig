{% extends 'base.html.twig' %}

{% block title %}Libreria  {% endblock %}

{% block body %}
<div class="mt-1 row justify-content-center">
    <div class="col-auto text-center">
        <h2>LIBRERIA</h2>
        <h3>"NUEVOS HORIZONTES"</h3>
    </div>
</div>

<div >
    <div class="container mt-3">
        <table class="table ">
            <thead class="thead-dark">
                <tr>
                    <th>Título</th>
                    <th>Descripción</th>
                    <th>Año de publicación</th>
                    <th>Autor</th>
                    
                </tr>
            </thead>
            <tbody>
                {% for libro in libros%}
                    <tr>
                        <td>{{libro.titulo}}</td>
                        <td>{{libro.descripcion}}</td>
                        <td>{{ libro.anio}}</td>
                        <td>{{libro.autor}}</td>
                        <td>
                            <a href={{path('app_edit',{id:libro.id})}} class="btn btn-primary">Editar</a>
                            <a href={{path('app_delete',{id:libro.id})}} class="btn btn-danger">Eiminar</a>
                            
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class=" justify-content-center mt-4">
    <div class=" text-center">
        <a href={{path('app_create')}} class="btn btn-primary">Añadir Libro</a>
    </div>
</div>
{% endblock %}
